pipeline {
    agent any
    environment {
        IMAGE_NAME = 'flask-app'
        REGISTRY = 'docker.io'
    }
    stages {
        stage('Clone Repository') {
            steps {
                cleanWs() // Clean the workspace to avoid stale data
                git branch: 'main', url: 'https://github.com/adhirk09/ci-cd-pipeline.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${REGISTRY}/${IMAGE_NAME}")
                }
            }
        }
        stage('Test Application') {
            steps {
                script {
                    docker.image("${REGISTRY}/${IMAGE_NAME}").inside {
                        sh 'pytest' // Add your testing commands here
                    }
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', 'docker-hub-credentials') {
                        docker.image("${REGISTRY}/${IMAGE_NAME}").push('latest')
                    }
                }
            }
        }
        stage('Deploy Application') {
            steps {
                script {
                    echo 'Deploying the application...'
                }
            }
        }
        stage('Debug') {
            steps {
                script {
                    sh 'git status'
                    sh 'git branch -a'
                }
            }
        }
    }
}
